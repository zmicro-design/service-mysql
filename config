export SERVICE_MYSQL_CONFIG=$SERVICE_CONFIG

export SERVICE_MYSQL_HOST=0.0.0.0
export SERVICE_MYSQL_PORT=3306

export SERVICE_MYSQL_ROOT_PASSWORD=
